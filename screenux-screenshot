#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
HOST_APP="${SCRIPT_DIR}/src/screenux_screenshot.py"
FLATPAK_APP="/app/share/screenux/screenux_screenshot.py"

if [[ -f "${FLATPAK_APP}" ]]; then
  exec python3 "${FLATPAK_APP}" "$@"
fi

exec python3 "${HOST_APP}" "$@"
