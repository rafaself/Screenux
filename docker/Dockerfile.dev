FROM ubuntu:24.04

ARG DEBIAN_FRONTEND=noninteractive

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        ca-certificates \
        python3 \
        python3-gi \
        python3-gi-cairo \
        gir1.2-gtk-4.0 \
        python3-pytest \
        python3-bandit \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace
